---
import { Image } from 'astro:assets';
import { Picture } from 'astro:assets';
import logoBlack from '../assets/img/UnlockZamok_Logo.svg';
import navImg from '../assets/img/UnlockZamok_Icon_white.svg';
import contactData from "../data/contact.json";
import { getCollection } from 'astro:content';
const allServices = await getCollection('services');
---

<header class="tm-header tm-header-overlay uk-position-z-index-high"
        uk-inverse="target: .uk-navbar-container, .tm-headerbar; sel-active: .uk-navbar-transparent, .tm-headerbar"
        uk-header>
    <div uk-sticky="start: 200" 
         animation="uk-animation-slide-top" 
         cls-active="uk-navbar-sticky" 
         sel-target=".uk-navbar-container" 
         cls-inactive="uk-navbar-transparent"
         tm-section-start
    >
        <div class="uk-navbar-container uk-navbar-transparent uk-position-relative uk-position-z-index-high">
            <div class="uk-container uk-container-expand">
                <nav class="uk-navbar" uk-navbar="{align : left , container : .tm-header > [uk-sticky] , boundary : .tm-header .uk-navbar-container }">
                    <div class="uk-navbar-left">
                        <a href="/" class="uk-logo uk-navbar-item" aria-label="Повернутися на головну сторінку">
                            <Image src={logoBlack} alt="UnlockZamok" width="150" height="50" />                                                        
                        </a>
                    </div>
                    <div class="uk-navbar-right">
                        {
                            contactData.map((contact) => {
                                return (                            
                                    contact.Items.map((item) => (
                                        <div class="uk-navbar-item uk-visible@l nav-phone">
                                            <a href={item.url} class="uk-link-heading">
                                                <svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M21.97 18.33C21.97 18.69 21.89 19.06 21.72 19.42C21.55 19.78 21.33 20.12 21.04 20.44C20.55 20.98 20.01 21.37 19.4 21.62C18.8 21.87 18.15 22 17.45 22C16.43 22 15.34 21.76 14.19 21.27C13.04 20.78 11.89 20.12 10.75 19.29C9.6 18.45 8.51 17.52 7.47 16.49C6.44 15.45 5.51 14.36 4.68 13.22C3.86 12.08 3.2 10.94 2.72 9.81C2.24 8.67 2 7.58 2 6.54C2 5.86 2.12 5.21 2.36 4.61C2.6 4 2.98 3.44 3.51 2.94C4.15 2.31 4.85 2 5.59 2C5.87 2 6.15 2.06 6.4 2.18C6.66 2.3 6.89 2.48 7.07 2.74L9.39 6.01C9.57 6.26 9.7 6.49 9.79 6.71C9.88 6.92 9.93 7.13 9.93 7.32C9.93 7.56 9.86 7.8 9.72 8.03C9.59 8.26 9.4 8.5 9.16 8.74L8.4 9.53C8.29 9.64 8.24 9.77 8.24 9.93C8.24 10.01 8.25 10.08 8.27 10.16C8.3 10.24 8.33 10.3 8.35 10.36C8.53 10.69 8.84 11.12 9.28 11.64C9.73 12.16 10.21 12.69 10.73 13.22C11.27 13.75 11.79 14.24 12.32 14.69C12.84 15.13 13.27 15.43 13.61 15.61C13.66 15.63 13.72 15.66 13.79 15.69C13.87 15.72 13.95 15.73 14.04 15.73C14.21 15.73 14.34 15.67 14.45 15.56L15.21 14.81C15.46 14.56 15.7 14.37 15.93 14.25C16.16 14.11 16.39 14.04 16.64 14.04C16.83 14.04 17.03 14.08 17.25 14.17C17.47 14.26 17.7 14.39 17.95 14.56L21.26 16.91C21.52 17.09 21.7 17.3 21.81 17.55C21.91 17.8 21.97 18.05 21.97 18.33Z" stroke="#000" stroke-width="1.5" stroke-miterlimit="10"/>
                                                    <path d="M18.5 9C18.5 8.4 18.03 7.48 17.33 6.73C16.69 6.04 15.84 5.5 15 5.5" stroke="#000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                    <path d="M22 9C22 5.13 18.87 2 15 2" stroke="#000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                </svg>
                                                <span class="uk-margin-small-left">{item.num}</span>
                                            </a>
                                        </div>                            
                                    ))      
                                );
                            })
                        }
                        <div class="uk-navbar-item">
                            {
                                contactData.map((contact) => {
                                    return (
                                        <a href={contact.FavCall} class="uk-button uk-button-primary" title="Виклик майстру">Виклик майстра</a>
                                    )
                                })
                            }
                        </div>
                        <a href="#tm-dialog" class="uk-navbar-toggle uk-navbar-toggle-animate" role="button" aria-label="Відкрити меню" uk-toggle>
                            <div uk-navbar-toggle-icon></div>
                        </a>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- DropBar -->
    <div id="tm-dialog" 
         class="uk-dropbar uk-dropbar-large uk-dropbar-top uk-dropbar-inset uk-drop uk-background-muted uk-background-cover"
         uk-drop="clsDrop:uk-dropbar; flip:false; container:.tm-header > [uk-sticky]; target-y:.tm-header .uk-navbar-container; mode:click; target-x:.tm-header .uk-navbar-container; stretch:true; pos:top-left; bgScroll:false; animateOut:true; duration:300; toggle:false; inset:true;"
         data-src={navImg.src}
         uk-img
         style="z-index: 980; background-size: contain; background-position: 100% 100%;">
        <div class="tm-height-min-1-1 uk-flex uk-flex-column uk-container uk-container-small">
            <div uk-height-placeholder=".tm-header .uk-navbar-container"></div>
            <div class="uk-margin-auto-bottom tm-height-expand">
                <div class="uk-panel uk-width-1-1">
                    <div class="uk-height-1-1 uk-grid-margin" uk-grid>
                        <div class="uk-grid-item-match uk-flex-middle uk-width-1-1@">
                            <nav class="uk-margin-large uk-margin-large-top uk-text-center">
                                <ul class="uk-margin-remove-bottom uk-nav-primary uk-nav-medium uk-nav-center" uk-nav>
                                    <li><a href="/" title="Головна">Головна</a></li>
                                    {
                                        allServices.map((service) =>
                                            <li><a href={service.slug} title={service.data.title}>{service.data.title}</a></li>
                                    )}
                                </ul>
                            </nav>
                            <div class="uk-panel">
                                <div class="uk-grid tm-grid-expand uk-grid-large uk-grid-margin-large" uk-grid>
                                    <div class="uk-width-1-2@xl">
                                        <div class="uk-h3 uk-margin-small uk-text-left@xl uk-text-center">Контакти</div>
                                        <div class="uk-text-left@xl uk-text-center">
                                            {
                                            contactData.map((contact) => {
                                                return (                            
                                                    contact.Items.map((item) => (
                                                        <div class="uk-h4 uk-margin-small">
                                                            <a href={item.url} class="uk-link-heading">{item.num}</a>
                                                        </div>                            
                                                    ))      
                                                );
                                            })
                                        }
                                        </div>
                                    </div>
                                    <div class="uk-width-1-2@xl">
                                        <div class="uk-h3 uk-margin-small uk-text-right@xl uk-text-center">Месенджери</div>
                                        <div class="uk-panel uk-text-large uk-margin-remove-vertical uk-text-right@xl uk-text-center cocial-icons">
                                        {
                                            contactData.map((message) => {
                                                return (
                                                    message.Messangers.map((mes) => (
                                                        <a href={mes.url} title={mes.title} class="uk-link-reset uk-margin-medium-right">
                                                            <img src={mes.icon} alt={mes.title} width="50" height="50" />
                                                        </a>
                                                    ))
                                                );
                                            })
                                        }   
                                        </div> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

