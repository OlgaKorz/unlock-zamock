---
import { Image } from 'astro:assets';
import ButtonModal from './ButtonModal.astro';
import CardPhone from './CardPhone.astro';
import contactData from '../data/contact.json';
const { imgSrc, imgAlt, title, text, btnText, btnClass, modalUrl  } = Astro.props;
---
<div class="uk-tile uk-tile-primary uk-border-rounded section-center"
     uk-scrollspy="cls: uk-animation-slide-bottom-medium; delay: 300;">
    <div class="uk-grid-small" uk-grid>
        <div class="uk-width-1-3@l">
            <Image src={imgSrc} width="550" height="550" class="image-cta" alt={imgAlt} />
        </div>
        <div class="uk-width-2-3@l">
            <div class="uk-panel uk-width-1-1 uk-text-center">
                <h2 class="uk-h1">{title}</h2>
                <div class="uk-margin-medium-top">
                    {text}
                </div>
                <div class="uk-margin-medium-top">
                    <ButtonModal
                        btnText={btnText}
                        btnClass={btnClass}
                        modalUrl={modalUrl} />
                </div>
                <div class="uk-flex uk-flex-middle uk-flex-center uk-flex-wrap uk-margin-medium-top" uk-margin>												
                    {
                        contactData.map((contact) => {
                            return (

                            contact.Items.map((item) => (
                                <div>
                                    <CardPhone 
                                    num = {item.num}
                                    url = {item.url}
                                    />
                                </div>
                            ))	

                            );
                        })
                    }
                </div>
            </div>
        </div>
    </div>
</div>